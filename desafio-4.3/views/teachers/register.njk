{% extends 'layout.njk' %}


{% block content %}


    <div class="content">
        <header>
            <a href="/">Cadastro</a>
            <a href="/login">Login</a>
        </header>

        <div class="welcome">
            <h2>Seja bem vindo a Digital</h2>
            <h3>Cadastre sua conta agora</h3>
        </div>

        <div class="register">

            <div class="data">

                <div class="avatar_url">
                    <p>Avatar URL</p>
                    <input type="url" placeholder="  http://">
                </div>

                <div id="user">
                    <input type="text" placeholder="  Nome completo">
                </div>

                <div class="date">
                    <input type="text" placeholder="  Data de nascimento" onfocus="(this.type='date')" onblur="(this.type='text')"/>
                </div>


                <div id="password">
                    <p>Senha</p>
                    <input type="password" placeholder="  ****************">  
                </div>

            </div>

            <div class="forgot-password">
                <a href="#">Esqueci minha senha?</a>
            </div>

            <button class="button" type="submit">Login</button>

            <div class="support">
                <a href="#">Ajuda & Suporte</a>
            </div>
        </div>

        <div class="media">
            <img src="./assets/facebook.svg" alt="">
            <img src="./assets/instagram.svg" alt="">
            <img src="./assets/link.svg" alt="">
        </div>
    </div>

    <div class="info">

        <div class="logo">
            <img src="./assets/logo-school.svg" alt="">
            <h3>Digital School</h3>
        </div>

        <div class="presentation">
            <img src="./assets/user.svg" alt="">
            <h4>Vamos fazer acontecer os seus sonhos</h4>
            <h5>Agora e melhor momentos para investir em vocÃª</h5>
        </div>

        <div class="action">
            <button type="submit">Inscreva-se</button>
        </div>

    </div>


{% endblock %}