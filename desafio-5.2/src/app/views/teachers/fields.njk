<div class="item">
    <div>Avatar URL</div>
    <div>
        <input 
        type="url" 
        name="avatar_url"
        placeholder= "http://"
        value="{{ teacher.avatar_url }}"
        >
    </div>
</div>

<div class="item">
    <div>Professor</div>
    <div>
        <input 
            type="text" 
            name="name"
            placeholder= "Nome do Professor"
            value="{{ teacher.name }}"
        >
    </div>
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input 
            type="date" 
            name="birth" 
            value="{{ teacher.birth }}"
        >
    </div>
</div>

<div class="item">
    <div>Nível de Escolaridade</div>
    <div>
        <select name="" id="">
            <option value="">Sem Escolaridade</option>
            <option value="">Ensino Fundamental</option>
            <option value="">Ensino Médio</option>
            <option value="">Ensino Superior</option>
        </select>
    </div>
</div>

<div class="item">
    <div>Área de atuação</div>
    <div>
        <input 
            type="text"
            name="services"
            placeholder="Separe os serviços prestados por vírgula"
            value="{{ teacher.services }}"
        >
    </div>
</div>

<button type="submit">Salvar</button>