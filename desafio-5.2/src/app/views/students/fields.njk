<div class="item">
    <div>Avatar URL</div>
    <div>
        <input 
        type="url" 
        name="avatar_url"
        placeholder= "http://"
        value="{{ student.avatar_url }}"
        >
    </div>
</div>

<div class="item">
    <div>Nome</div>
    <div>
        <input 
            type="text" 
            name="name"
            value="{{ student.name }}"
        >
    </div>
</div>

<div class="item">
    <div>Email</div>
    <div>
        <input 
            type="email" 
            name="email"
            value="{{ student.email }}"
        >
    </div>
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input 
            type="date" 
            name="birth" 
            value="{{ student.birth }}"
        >
    </div>
</div>

<div class="item">
    <div>Sexo</div>
    <div>
        <span>
            <input 
            type="radio" 
            name="gender" 
            value="M" 
            {% if student.gender == 'M' %}
            checked
            {% endif %} 
            >Masculino
        </span>
        <span>
            <input 
            type="radio" 
            name="gender" 
            value="F"
            {% if student.gender == 'F' %}
            checked
            {% endif %} 
            >Feminino
        </span>
    </div>
</div>

<div class="item">
    <div>Tipo Sangu√≠neo</div>
    <div>
        <select name="blood">
            <option value="A1" selected>
                {% if student.blood == "A1" %}selected{% endif %}
                A+
            </option>
            <option value="A0">
                {% if student.blood == "A0" %}selected{% endif %}
                A-
            </option>            
            <option value="B1">
                {% if student.blood == "B1" %}selected{% endif %}
                B+
            </option>
            <option value="B0">
                {% if student.blood == "B0" %}selected{% endif %}
                B-
            </option>
            <option value="AB1">
                {% if student.blood == "AB1" %}selected{% endif %}
                AB+
            </option>
            <option value="AB0">
                {% if student.blood == "AB0" %}selected{% endif %}
                AB-
            </option>
            <option value="O1">
                {% if student.blood == "01" %}selected{% endif %}
                O+
            </option>
            <option value="O0">
                {% if student.blood == "O0" %}selected{% endif %}
                O-
            </option>
        </select>
    </div>
</div>

<div class="item">
    <div>Peso (kg)</div>
    <div>
        <input 
            type="number" 
            name="weight" 
            value="{{ student.weight }}"
        >
    </div>
</div>

<div class="item">
    <div>Altura (cm)</div>
    <div>
        <input 
            type="number" 
            name="height" 
            value="{{ student.height }}"
        >
    </div>
</div>

<button type="submit">Salvar</button>