{% extends 'layout.njk' %}

{% block content %}

<div class="card">
    <section 
        class="avatar" 
        style="background: url({{ student.avatar_url }}) no-repeat center center / cover">
    </section>
    
    <section class="details">
        <h3>Detalhes</h3>

        <div class="item">
            <div>Aluno</div>
            <div>{{ student.name }}</div>
        </div>

        <div class="item">
            <div>Idade</div>
            <div>{{ student.age }}</div>
        </div>

        <div class="item">
            <div>Nível de Escolaridade</div>
            <div>{{ student.education_level }}</div>
        </div>

        <div class="item">
            <div>Tipo de Formação</div>
            <div>{{ student.class_type }}</div>
        </div>

        <div class="item">
            <div>Habilidades subjetivas</div>
            <div>
                {% for subjects in student.subjects_taught %}
                    <span>{{ subjects }}</span>
                {% endfor %}
            </div>
        </div>

        <div class="item">
            <div>Desde</div>
            <div>{{ student.date }}</div>
        </div>

        <div class="item">
            <div>Aluno de</div>
            <div>{{ student.teacher_name }}</div>
        </div>

        <a href="/students/{{ student.id }}/edit" class="button">Editar</a>

    </section>
</div>

{% endblock content %}