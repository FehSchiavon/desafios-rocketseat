{% extends "layout.njk" %}

{% block head %}
    <title>Curso da Rocketseat</title>
{% endblock %}
        
{% block content %}
<main>
    <h1>Conheça um pouco mais nossos conteúdos...</h1>
    <section>
        {% for item in items %}
        <div class="courses" id="{{item.name_course}}">
            <img src="{{item.logo}}" alt="{{item.name_course}}">
            <div class="info">
                <ul>
                    <li>{{item.price}}</li>
                    <li>{{item.amount_model}}</li>
                    <li>{{item.classes}}</li>
                </ul>
            </div>
        </div>
        {% endfor %}
    </section>
</main>

{% endblock %}